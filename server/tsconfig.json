{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@paths": ["paths.ts"]
    },
    "outDir": "./dist",
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true,
    "types": ["@types/jest"]
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "files": ["typings/global.d.ts"],
  "include": ["src/**/*.ts", "config/**/*.ts", "typings"],
  "exclude": ["node_modules"]
}
